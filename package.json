{
  "name": "@egfn/doc-sync",
  "version": "1.0.0",
  "description": "DocSync is a library that leverages Typescript and Pouchdb/CouchDB to enforce a sychronized document model between the browser and Node.js.",
  "repository": "https://github.com/eigenfunctor/doc-sync",
  "license": "MIT",
  "main": "build/index.js",
  "files": [
    "*",
    "build/*",
    "build/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "deploy:docs": "typedoc --mode file --out docs && gh-pages -d docs",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "dependencies": {
    "pouchdb": "^7.1.1",
    "pouchdb-adapter-memory": "^7.1.1",
    "pouchdb-find": "^7.1.1",
    "pouchdb-validation": "^4.2.0",
    "ramda": "^0.26.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node-fetch": "^2.5.4",
    "@types/pouchdb": "^6.4.0",
    "@types/pouchdb-core": "^7.0.5",
    "gh-pages": "^2.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.2.0",
    "typedoc": "^0.15.5",
    "typescript": "^3.7.2"
  }
}
